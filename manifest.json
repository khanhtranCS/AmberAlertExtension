{
	"manifest_version": 2,
	"name": "Amber Safe",
	"version": "1.1.1",
	"description": "An extension alert people criminal or missing child around them",
	"permissions": ["geolocation"],
	"icons": { "16": "16.png",
		"48": "48.png",
		"128": "128.png"
	},
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["jquery-2.1.4.min.js","popup.js"]
	}],
	"background": {
		"scripts": ["jquery-2.1.4.min.js","background.js"]
	},
	"browser_action" : {
		"default_popup": "popup.html",
		"default_title": "popup menu"
	},
	"permissions": ["http://www.pokego.org/*"]
}